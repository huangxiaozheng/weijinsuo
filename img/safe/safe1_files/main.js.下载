var api=new wjsApi();function userNav(){$(".first-menu").on("click",function(){$(this).parent().addClass("active").siblings().removeClass("active")})}function logout(){api.get("logout",{userSession:$.cookie("u")},function(a){if($.checkResult(a)){$.cookie("u","");$.cookie("ul","");$.goUrl("/")}})}function sobot(){var e=!!$.cookie("u");var d=$.cookie("ul"),b=(e&&d)?JSON.parse(d):{};var a=(getzhiSDKInstance());a.set("customBtn","true");a.set("manual","true");a.set("horizontal",100);if(e){var c="partnerId="+b.userId+"&uname="+b.userName+"&tel="+b.phone+"&email="+b.email;a.set("userinfo",{partnerId:b.userId,tel:b.phone,email:b.email,uname:b.userName,realname:b.realName})}a.on("load",function(f){a.initBtnDOM()})}function currMenu(){var a=window.location.pathname;var c=a.split("/");var b=-1;switch(c[1]){case"loan":b=1;break;case"stock":b=2;break;case"security":b=3;break;case"guide":b=4;break;case"news":b=5;break;case"about":b=6;break;case"user":b=8;break;default:b=0}$("nav .menu a").removeClass("active");$("nav .menu li").eq(b).find("a").addClass("active")}function init(){var b=!!$.cookie("u");var a=$.cookie("ul");var f=localStorage.getItem("isHaveInsideLetter");var d=localStorage.getItem("orgType");var c=localStorage.getItem("productType");if(b){a=JSON.parse(a);$("#username").html(a.userName);$("#avatar").attr("src",a.headPic);$(".anonymous").hide();$(".logged").show();if(f>0){$("#reddot-msg").addClass("reddot")}if(d==1||d==2){$("#userHomeUrl,#username").attr("href","/org/invest/home");$("#top-msglist").hide()}else{if(d==3){$("#userHomeUrl,#username").attr("href","/org/debit/home");$("#top-msglist").hide()}}}var e=$.cookie("idCardType");if(e&&e!=0){$("#account-menu-charge").attr("href","/recharge/personalRechargePage")}else{$("#account-menu-charge").attr("href","/lianRecharge/toLianRechargePage")}currMenu();if(typeof userCenter!="undefined"){userNav()}$(".rocketLine").click(function(){$("html,body").animate({scrollTop:"0px"},300)});$(document).scroll(function(){if($(this).scrollTop()>100){$(".rocketPar").fadeIn()}else{$(".rocketPar").fadeOut()}})}init();$(function(){sobot()});